@using System.Web;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Inquiry Prototype</title>
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <base href="./" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/scripts/ng")

    <link href="~/Content/default-theme.css" rel="stylesheet" id="themes" />
    <script>
        // Get the locale id
        document.locale = '@HttpContext.Current.Request.UserLanguages[0].ToString()';
        // Map to the text plugin
        System.config({
            map: {
                text: 'systemjs-text-plugin.js'
            }
        });
        System.import('src').catch(function (err) {
            console.error(err);
        });
    </script>
</head>
<body>
    @RenderBody()
</body>
</html>
